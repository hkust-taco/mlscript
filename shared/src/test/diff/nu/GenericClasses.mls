class Some<A>(value: A) {
  fun get = value
  fun toArray = [value]
  fun map(f) = Some(f(value))
  fun map_A(f : A => 'b) = Some(f(value))
}
//│ class Some[A](value: A) {
//│   fun get: A
//│   fun map: (A -> 'A) -> Some['A]
//│   fun map_A: (A -> 'A0) -> Some['A0]
//│   fun toArray: (A,)
//│ }


let s = Some(1)
//│ let s: Some[1]
//│ s
//│   = Some {}


s.value
//│ 1
//│ res
//│     = 1

s.get
//│ 1
//│ res
//│     = 1

s.toArray
//│ (1,)
//│ res
//│     = [ 1 ]


s.map
//│ (1 -> 'A) -> Some['A]
//│ res
//│     = [Function: map]

s.map(succ)
//│ Some[int]
//│ res
//│     = Some {}


s.map_A
//│ (1 -> 'A) -> Some['A]
//│ res
//│     = [Function: map_A]

s.map_A(succ)
//│ Some[int]
//│ res
//│     = Some {}



