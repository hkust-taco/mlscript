//│     = Some {}



if opt is Some then opt.value else 0
//│ 0 | 123
//│ res
//│     = 123

if opt is Some(v) then v else 0
//│ 0 | 123
//│ res
//│     = 123


fun map(x, f) = if x is
  None then None
  Some(v) then Some(f(v))
//│ fun map: (None | Some['value], 'value -> 'A,) -> (None | Some['A])

let mo = map(opt, succ)
//│ let mo: None | Some[int]
//│ mo
//│    = Some {}

mo.toArray
//│ Array[int]
//│ res
//│     = [ 124 ]



