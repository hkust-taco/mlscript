//│ Array[123]
//│ res
//│     = [ 123 ]


opt.map(succ)
//│ None | Some[Int]
//│ res
//│     = Some {}

opt.map_A(succ)
//│ None | Some[Int]
//│ res
//│     = Some {}

opt.map(x => x > 0)
//│ None | Some[Bool]
//│ res
//│     = Some {}



if opt is Some then opt.value else 0
//│ 0 | 123 & ??A
//│ res
//│     = 123

if opt is Some(v) then v else 0
//│ 0 | 123 & ??A
//│ res
//│     = 123


fun map(x, f) = if x is
  None then None
  Some(v) then Some(f(v))
//│ fun map: forall 'A 'a. (None | Some['A], (??A & 'A) -> 'a) -> (None | Some['a])

let mo = map(opt, succ)
//│ let mo: None | Some[Int]
//│ mo
//│    = Some {}

mo.toArray
//│ Array[Int]
//│ res
//│     = [ 124 ]



