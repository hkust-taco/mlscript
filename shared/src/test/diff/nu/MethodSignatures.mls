// * Without a type signature, the method's inferred type is not generalized
module A {
  fun i(x) = x
}
//│ module A {
//│   fun i: 'a -> 'a
//│ }

// * With a type signature, it is generalized and checked against the signature
module A {
  
  fun i: forall 'a; 'a -> 'a
  fun i(x) = x
  
  fun j: 'b -> 'b
  fun j(x) = x
  
}
//│ module A {
//│   fun i: forall 'a. 'a -> 'a
//│   fun j: forall 'b. 'b -> 'b
//│ }


