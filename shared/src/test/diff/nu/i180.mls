fun (:-) listExclude(xs, x) =
  if xs is
    Nil then Nil
    Cons(x', xs') and
      x === x' then xs' :- x
      else x' :: (xs' :- x)
//│ fun (:-) listExclude: forall 'A 'A0. (Cons['A] | Nil, Eql[?]) -> (Nil | List[in 'A0 out 'A0 | ??A & (error | 'A)])

