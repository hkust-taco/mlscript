mixin M1[A] {
    fun f1(x: A): A = x
    fun f2(x: A): (A, A) = (x, x)
}
//│ mixin M1[A]() {
//│   fun f1: (x: A,) -> A
//│   fun f2: (x: A,) -> (A, A,)
//│ }

class A1 extends M1 {
    fun f1(x: Int) = x
}
//│ class A1 {
//│   fun f1: (x: Int,) -> Int
//│   fun f2: (x: 'A,) -> ('A, 'A,)
//│ }

class A2[S, T] extends M1[(S, T)]
//│ class A2[S, T] {
//│   fun f1: (x: (S, T,),) -> (S, T,)
//│   fun f2: (x: (S, T,),) -> ((S, T,), (S, T,),)
//│ }

class A3(f1: Bool => Bool) extends M1
//│ class A3(f1: Bool -> Bool) {
//│   fun f1: (x: 'A,) -> 'A
//│   fun f2: (x: 'A,) -> ('A, 'A,)
//│ }

mixin M2[A] {
    fun m: A = this.a
}
//│ mixin M2[A]() {
//│   this: {a: A}
//│   fun m: A
//│ }

class B1(a: Int) extends M2[Int]
//│ class B1(a: Int) {
//│   fun m: Int
//│ }

class B2[A](a: Int => A) extends M2
//│ class B2[A](a: Int -> A) {
//│   fun m: Int -> A
//│ }

