:NewDefs


// * Operators that end with `:` are right-associative


fun (+:) pre(x: Int, xs) = [[x], xs]
fun (:+) post(xs, x: Int) = [xs, [x]]
fun (++) conc(xs, ys) = [xs, ys]
//│ fun (+:) pre: forall 'a. (x: Int, 'a) -> [[Int], 'a]
//│ fun (:+) post: forall 'b. ('b, x: Int) -> ['b, [Int]]
//│ fun (++) conc: forall 'c 'd. ('c, 'd) -> ['c, 'd]


1 +: 2 +: 3 +: []
//│ [[Int], [[Int], [[Int], []]]]
//│ res
//│     = [ [ 1 ], [ [ 2 ], [ [Array], [] ] ] ]

[] :+ 1 :+ 2 :+ 3
//│ [[[[], [Int]], [Int]], [Int]]
//│ res
//│     = [ [ [ [], [Array] ], [ 2 ] ], [ 3 ] ]

[1, 2, 3] ++ [4, 5, 6]
//│ [[1, 2, 3], [4, 5, 6]]
//│ res
//│     = [ [ 1, 2, 3 ], [ 4, 5, 6 ] ]

