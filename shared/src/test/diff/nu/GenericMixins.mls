mixin Test[A] {
  fun foo: A -> A
  fun foo = id
  fun bar: (A, A)
  fun bar = (this.arg, this.arg)
  fun baz = foo(this.arg)
}
//│ mixin Test[A]() {
//│   this: {arg: A & 'a}
//│   fun bar: (A, A,)
//│   fun baz: 'a
//│   fun foo: A -> A
//│ }

class C(val arg: Int) extends Test
//│ class C(arg: Int) {
//│   fun bar: (Int | 'A, Int | 'A,)
//│   fun baz: Int
//│   fun foo: 'A -> (Int | 'A)
//│ }

let c = C(1)
[c.foo(false), c.bar]
//│ let c: C
//│ (Int | false, (Int, Int,),)
//│ c
//│   = C {}
//│ res
//│     = [ false, [ 1, 1 ] ]

