mixin Test[A] {
  fun foo: A -> A
  fun foo = id
  fun bar: (A -> A) -> (A -> A)
  fun bar = id
}
//│ mixin Test[A]() {
//│   fun bar: (A -> A) -> A -> A
//│   fun foo: A -> A
//│ }

module C extends Test {
  fun baz1 = this.foo(0)
  fun baz2 = this.bar(this.foo)
}
//│ module C {
//│   fun bar: ((0 | 'A) -> 'A) -> 'A -> (0 | 'A)
//│   fun baz1: 0 | 'A
//│   fun baz2: 'A -> (0 | 'A)
//│   fun foo: 'A -> (0 | 'A)
//│ }

C.baz1
//│ 0
//│ res
//│     = 0

C.foo(1)
//│ 0 | 1
//│ res
//│     = 1

C.foo(false)
//│ 0 | false
//│ res
//│     = false

