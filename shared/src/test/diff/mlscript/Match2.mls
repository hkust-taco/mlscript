
class Test: { value: int }
//│ Defined class Test

def foo x = case x of
  { Test -> x.value
  | _ -> 1
  }
//│ foo: ((Test with {value: 'a}) | ~Test) -> (1 | 'a)

// Q: why type of `value` widened?
def t = Test { value = 0 }
//│ t: Test & {value: 0}

foo Test
//│ res: 1

foo t
//│ res: 0 | 1


class Toast: { name: string }
//│ Defined class Toast

def bar x = case x of
  { Test -> x.value
  | Toast -> x.name
  }
