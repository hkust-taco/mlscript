class C[A]: { h: A; t: List[A] }
type List0[A] = C[A] | ()
//│ Defined class C[+A]
//│ Defined type alias List0[+A]

list1 = C { h = 1; t = C { h = 2; t = () }}
//│ list1: C[1 | 2] with {h: 1, t: C[2] with {t: ()}}
//│      = C { h: 1, t: C { h: 2, t: [] } }

list2 = C { h = 3; t = () }
//│ list2: C[3] with {t: ()}
//│      = C { h: 3, t: [] }

ls = if true then list1 else list2
//│ ls: C[1 | 2 | 3] with {h: 1 | 3, t: () | (C[2] with {t: ()})}
//│   = C { h: 1, t: C { h: 2, t: [] } }

ls : List0[int]
//│ res: List0[int]
//│    = C { h: 1, t: C { h: 2, t: [] } }



