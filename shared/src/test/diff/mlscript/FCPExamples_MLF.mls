// ============ Leijen 2007 ============

// ------------ Sec 2 ------------

// FreezeML B1
// nope
poly = fun f -> (f 1, f true)
//│ poly: 'a -> (forall 'a, 'b, 'c. (('b, 'c,)
//│   where
//│     'a <: 1 -> 'b & true -> 'c))

// FreezeML B2
polyL = fun xs -> poly (head xs)
//│ polyL: 'a -> (forall 'a, 'b, 'c, 'd. (('c, 'd,)
//│   where
//│     'b <: 1 -> 'c & true -> 'd
//│     'a <: List['b]))

let ids = single id in (polyL ids, append ids (single inc))
//│ res: (forall 'a, 'b, 'c. (('b, 'c,)
//│   where
//│     'a <: 1 -> 'b & true -> 'c
//│     'd <: List[?]), List[int -> int],)

