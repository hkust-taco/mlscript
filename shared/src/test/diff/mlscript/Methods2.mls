
class Option[A]
    method Get: A
    method Destruct: Some[A] | None[A]
class Some[A]: Option[A] & { payload: A }
    method Get = this.payload
    method Destruct = this
class None[A]: Option[A]
    method Get = error
    method Destruct = this
