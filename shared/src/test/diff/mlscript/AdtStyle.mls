fun x ->
  match x with
   | Cons(a, b) -> b
   | Nil -> Nil
//│ res: List['A] -> List['A]

fun x ->
  match x with
   | Cons(1, b) -> Cons(0, b)
   | Cons(a, b) -> b
   | Nil -> Nil
//│ res: List[int & 'A] -> List[0 | 'A]

fun x ->
  match x with
   | EInt(v,) -> v
   | _ -> 0
//│ res: Exp -> int

fun x ->
  match x with
   | (1, 2, 3) -> 6
   | (x, y, 3,) -> x + y
   | _ -> 0
//│ res: (int, int, int,) -> int

fun (x, y) ->
  match (x, y) with
   | (1, 2) -> 3
   | _ -> 0
//│ res: (int, int,) -> (0 | 3)


