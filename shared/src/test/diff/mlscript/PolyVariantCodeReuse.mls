// ************************** Mix things *******************************

def eval_lexpr eval_rec subst v = case v of {
  | Lambda -> eval_lambda eval_rec subst v
  | Expr -> eval_expr eval_rec subst v
  }
//│ eval_lexpr: (((Cons[('a, 'lhs,)] with {tail: Nil}) | 'b) -> 'lhs0 -> ('result & 'lhs & ((Abs[?] with {body: 'lhs0, name: 'a}) | 'lhs1 & ~abs))) -> ('b & 'c) -> ((Abs[?] with {body: 'lhs0, name: string & 'name}) | (Add[?] with {lhs: 'lhs0, rhs: 'lhs0}) | (App[?] with {lhs: 'lhs0, rhs: 'lhs0}) | (Mul[?] with {lhs: 'lhs0, rhs: 'lhs0}) | Num & 'result | Var & 'result) -> ((Abs['lhs] with {name: 'name}) | Add['lhs] | (App['lhs] with {lhs: 'lhs1, rhs: 'lhs}) | Mul['lhs] | Num | 'result)
//│   where
//│     'c <: (Cons[?] with {head: {_1: string, _2: 'result}, tail: 'c}) | Nil
//│           = <no result>
//│             eval_lambda, eval_var, list_assoc and eq are not implemented

rec def eval3 subst = eval_lexpr eval3 subst
//│ eval3: 'b -> 'c -> 'a
//│   where
//│     'b <: (Cons[?] with {head: {_1: string, _2: 'result}, tail: 'b}) | Nil
//│     'result :> 'a | Num
//│             <: 'c & (Abs[?] & 'd | 'lhs & (Num | ~abs & ~num))
//│     'a :> Abs['a] & {name: 'name} | (App['a0] with {lhs: 'lhs, rhs: 'a}) | Num | 'result | 'e | 'f
//│     'a0 :> 'a | (Add['a] with {lhs: 'a, rhs: 'a}) | (App['a0] with {lhs: 'lhs, rhs: 'a}) | (Mul['a] with {lhs: 'a, rhs: 'a}) | Num
//│     'lhs :> (Add['a] with {lhs: 'a, rhs: 'a}) | (App['a0] with {lhs: 'lhs, rhs: 'a}) | (Mul['a] with {lhs: 'a, rhs: 'a}) | Num
//│          <: 'c & 'a0
//│     'c <: Abs[?] & {body: 'c, name: string & 'name} | Add[?] & {lhs: 'c, rhs: 'c} | App[?] & {lhs: 'c, rhs: 'c} | Mul[?] & {lhs: 'c, rhs: 'c} | Num & (Add[?] & 'f | Mul[?] & 'f | Num & 'result | Var & 'e) | Var & 'e
//│     'e <: 'c & (Abs[?] & 'd | 'lhs & (Num & {name: string} | {name: string} & ~abs & ~num))
//│     'f :> (Mul['a] with {lhs: 'a, rhs: 'a}) | (Add['a] with {lhs: 'a, rhs: 'a})
//│        <: 'c & (Abs[?] & {lhs: anything, rhs: anything} & 'd | 'lhs & (Num & {lhs: anything, rhs: anything} | {lhs: anything, rhs: anything} & ~abs & ~num))
//│     'd <: {body: 'c, name: string}
//│      = <no result>
//│        eval_lexpr, eval_lambda, eval_var, list_assoc and eq are not implemented

