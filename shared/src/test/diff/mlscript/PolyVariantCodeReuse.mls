class App[a]: Lambda & { lhs: a; rhs: a }
//│ Defined class Abs[+a]
//│ Defined class App[+a]

def f x = (x.a <- 0, x)
//│ f: ({mut a: in 0} & 'a) -> (unit, 'a,)
