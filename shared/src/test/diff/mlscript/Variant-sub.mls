class None: {}
class Some[A]: { v: A }
//│ Defined class None
//│ Defined class Some[+A]

def Some v = Some{v}
def None = None{}
//│ Some: 'v -> Some['v]
//│     = [Function: Some1]
//│ None: None
//│     = [Function: None1]

def flatMap = fun f -> fun opt ->
  case opt of { Some -> f opt.v | None -> opt }
//│ flatMap: ('v -> 'a) -> (None & 'a | Some[?] & {v: 'v}) -> 'a
//│        = [Function: flatMap]

f x = Some x
flatMap f (Some 1)
flatMap f None
//│ f: 'v -> Some['v]
//│  = [Function: f]
//│ res: Some[1]
//│    = Some { v: 1 }
//│ res: None | Some[nothing]
//│    = None {}

