class Cons[A]: Some[A] & { tail: List[A] }
type List[A] = Cons[A] | None
//│ Defined class Cons[+A]
//│ Defined type alias List[+A]

rec def mapList f ls = case ls of
  Cons -> Cons{value = f ls.value; tail = mapList f ls.tail},
  None -> None{}
//│ mapList: ('value -> 'a & 'value0 -> 'A) -> ((Cons[?] with {tail: 'tail, value: 'value}) | None) -> ((Cons['A | 'a] with {tail: 'b, value: 'a}) | None)
//│   where
//│     'b :> (Cons['A] with {tail: 'b}) | None
//│     'tail <: (Cons[?] with {tail: 'tail, value: 'value0}) | None
//│        = [Function: mapList]



def Cons head tail = Cons { value = head; tail = tail }
//│ Cons: 'a -> (List['A] & 'tail) -> (Cons['A | 'a] with {tail: 'tail, value: 'a})
//│     = [Function: Cons1]

def None = None{}
//│ None: None
//│     = [Function: None1]

rec def unzip xs = case xs of
  None -> { fst = None; snd = None },
  Some -> let tmp = unzip xs.tail in { fst = Cons xs.value.fst tmp.fst ;
                                       snd = Cons xs.value.snd tmp.snd }
//│ unzip: (None | Some[?] & {tail: 'tail, value: {fst: 'a, snd: 'b}}) -> {fst: (Cons['A | 'a] with {tail: 'fst, value: 'a}) | None, snd: (Cons['A0 | 'b] with {tail: 'snd, value: 'b}) | None}
//│   where
//│     'snd :> (Cons['A0] with {tail: 'snd}) | None
//│     'fst :> (Cons['A] with {tail: 'fst}) | None
//│     'tail <: None | Some[?] & {tail: 'tail, value: {fst: 'A, snd: 'A0}}
//│      = [Function: unzip]

