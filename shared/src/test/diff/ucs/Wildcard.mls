fun w2(x, p) =
  if x is
    Some then 1
    _ and p(x) then 2
    None then 3
    _ then 4
//│ fun w2: forall 'a. (None | Object & 'a & ~#None & ~#Some | Some[anything], (None | 'a) -> Object,) -> (1 | 2 | 3 | 4)

w2(Some(0), x => true)
w2(None, x => true)
w2(None, x => false)
w2(0, x => false)
//│ 1 | 2 | 3 | 4
//│ res
//│     = 1
//│ res
//│     = 2
//│ res
//│     = 3
//│ res
//│     = 4

