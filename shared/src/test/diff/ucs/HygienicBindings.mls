fun h1'(a) =
  if a is
    Some then
      let x = a.value
      let y = a.value
      if x is
        Left then
          let y = x.leftValue
          y
        _ then
          if y is
            Right then
              let z = y.rightValue
              z
    None then 0
//│ fun h1': forall 'B. (None | Some[Right['B] | Right[anything] & ~??T | ~??T]) -> (0 | ??B & 'B)

