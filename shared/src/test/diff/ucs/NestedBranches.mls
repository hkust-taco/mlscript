fun optionApply(x, y, f) =
  if x is
    Some(xv) and y is
      Some(yv) then Some(f(xv, yv))
      None then None
    None then None
//│ fun optionApply: forall 'a 'b 'c 'A. (None | Some['b], None | Some['c], ('b, 'c) ->{'a} 'A) ->{'a} (None | Some['A])

