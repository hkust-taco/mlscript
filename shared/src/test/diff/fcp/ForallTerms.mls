:NoRecursiveTypes



(forall 'A. fun (x: 'A) -> x) : forall 'X. 'X -> 'X
//│ res: 'X -> 'X
//│    = [Function: res]


f = forall 'A. fun (x: 'A) -> x
//│ f: 'A -> 'A
//│  = [Function: f]

f 0
f true
f: forall 'X. 'X -> 'X
//│ res: 0
//│    = 0
//│ res: true
//│    = true
//│ res: 'X -> 'X
//│    = [Function: f]


r = { f = forall 'A. fun (x: 'A) -> x }
//│ r: {f: 'A -> 'A}
//│  = { f: [Function: f] }

r.f 0
r.f true
//│ res: 0
//│    = 0
//│ res: true
//│    = true


def k1(f: forall 'X. 'X -> 'X) = (f 0, f true)
//│ k1: (forall 'X. 'X -> 'X) -> (0, true,)
//│   = [Function: k1]

k1 f
//│ res: (0, true,)
//│    = [ 0, true ]

k1 r.f
//│ res: (0, true,)
//│    = [ 0, true ]


def k2(f) = (f 0, f true)
//│ k2: (0 -> 'a & true -> 'b) -> ('a, 'b,)
//│   = [Function: k2]

k2 f
//│ res: (0, true,)
//│    = [ 0, true ]

k2 r.f
//│ res: (0, true,)
//│    = [ 0, true ]



