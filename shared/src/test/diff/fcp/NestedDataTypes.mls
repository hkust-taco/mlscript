type Two[A] = (A, A)
//│ Defined type alias Two[+A]

def mapTwo f ((a, b)) = (f a, f b)
//│ mapTwo: 'a -> (('b, 'c,) -> ('d, 'e,)
//│   where
//│     'a <: 'b -> 'd & 'c -> 'e)
//│       = [Function: mapTwo]

class Leaf[A]: { value: A }
//│ Defined class Leaf[+A]

