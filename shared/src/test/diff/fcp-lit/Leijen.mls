// -- standard Hindley-Milner tests

// [("\\x -> x", ok "forall a. a -> a")
fun x -> x
//│ res: 'a -> 'a
//│    = [Function: res]

// ,("\\f x -> f x", ok "forall a b. (a -> b) -> a -> b")
fun f -> fun x -> f x
//│ res: ('a -> 'b) -> 'a -> 'b
//│    = [Function: res]

// ,("inc True", Wrong)
:e
inc true
//│ ╔══[ERROR] Type mismatch in application:
//│ ║  l.277: 	inc true
//│ ║         	^^^^^^^^
//│ ╟── reference of type `true` is not an instance of type `int`
//│ ║  l.277: 	inc true
