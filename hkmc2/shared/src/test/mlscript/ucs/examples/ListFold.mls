fun foldRight(f)(z) =
  let aux(acc, xs) =
    if xs is
      Nil then acc
      Cons(x, xs') then f(x, aux(acc, xs'))
  (xs) => aux(z, xs)

let double = foldRight((x, acc) => x :: x :: acc)(Nil)
double(Nil) |> showList
