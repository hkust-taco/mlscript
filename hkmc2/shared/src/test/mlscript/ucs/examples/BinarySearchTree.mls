fun isBalanced(t) =
  if t is
    Empty then true
    Node(_, l, r) and height(l) is hl and height(r) is hr then
      // The precedence of `<=` seems to be broken.
      (abs(hl - hr) <= 1) && isBalanced(l) && isBalanced(r)

