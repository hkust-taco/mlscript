class Pair[A, B](val first: A, val second: B)

fun extractMin(t) =
  if t is
    Node(v, Empty, r) then Pair(Some(v), r)
    Node(v, l, r) and
      extractMin(l) is Pair(m, l') then
        Pair(m, Node(v, l', r))
    Empty then Pair(None, Empty)

