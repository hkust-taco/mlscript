fun foldLeft'(f: ('A, 'B) -> 'A)(z: 'A) =
  let g(x, y)(z) = y(f(z, x))
  (xs) => foldRight(g)(id)(xs)(z)
//│ fun foldLeft': forall 'A 'B. (f: ('A, 'B) -> 'A) -> (z: 'A) -> (Cons['B] | Nil) -> 'A

