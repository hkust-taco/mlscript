//│ Str
//│ res
//│     = '[1, 2, 3, 4, 5, 6]'

fun reverse(xs) =
  let rec aux(acc, xs) =
    if xs is
      Nil then acc
      Cons(x, xs') then aux(x :: acc, xs')
  aux(Nil, xs)
//│ fun reverse: (Cons[anything] | Nil) -> (Cons[nothing] | Nil)

